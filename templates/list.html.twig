{% extends 'base.html.twig' %}

{% block header %}
    <h1>Rejstřík</h1>
{% endblock %}

{% block content %}
    <div class="list", id="main">
        <div id="songs" class="list">
            <a href="?sortBy=name"><button class="list" id="main" type="button"><h2>Jméno</h2></button></a><br>
        </div>
        <div id="authors" class="list">
            <a href="?sortBy=author"><button class="list" id="main" type="button"><h2>Autor</h2></button></a><br>
        </div>
    </div>
    <div id="songs" class="list">
        {% for song in songs %}
            <a href="/song/{{ song.id }}"><button class="list" type="button">{{ song.name }}</button></a><br>
        {% endfor %}
    </div>
    <div id="authors" class="list">
        {% for song in songs %}
            <a href="/song/{{ song.id }}"><button class="list" type="button">{{ song.author }}</button></a><br>
        {% endfor %}
    </div>
{% endblock %}